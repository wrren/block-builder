	@${MAKE} --no-print-directory -C . -f CreatorLibraryShared.make

BuilderLibrary: 
	@echo "==== Building BuilderLibrary ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f BuilderLibrary.make

Builder: BuilderLibrary
	@echo "==== Building Builder ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Builder.make

UnitTests: CreatorLibrary BuilderLibrary
	@echo "==== Building UnitTests ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f UnitTests.make

clean:
	@${MAKE} --no-print-directory -C . -f CreatorLibrary.make clean
	@${MAKE} --no-print-directory -C . -f Creator.make clean
	@${MAKE} --no-print-directory -C . -f CreatorLibraryShared.make clean
	@${MAKE} --no-print-directory -C . -f BuilderLibrary.make clean
	@${MAKE} --no-print-directory -C . -f Builder.make clean
	@${MAKE} --no-print-directory -C . -f UnitTests.make clean

